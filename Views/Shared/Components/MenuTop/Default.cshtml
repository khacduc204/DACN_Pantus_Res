@model IEnumerable<KD_Restaurant.Models.tblMenu>

@{
    bool hasAboutLink = Model?.Any(item =>
        !string.IsNullOrWhiteSpace(item.UrlPath) &&
        item.UrlPath.Equals("/About/Index", System.StringComparison.OrdinalIgnoreCase)) ?? false;
    bool hasLocatorLink = Model?.Any(item =>
        !string.IsNullOrWhiteSpace(item.UrlPath) &&
        item.UrlPath.Equals("/Home/StoreLocator", System.StringComparison.OrdinalIgnoreCase)) ?? false;
    bool hasContactLink = Model?.Any(item =>
        !string.IsNullOrWhiteSpace(item.UrlPath) &&
        item.UrlPath.Equals("/Contact", System.StringComparison.OrdinalIgnoreCase)) ?? false;
}

<nav>
    <ul class="menu-top">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <li>
                    <a href="@item.UrlPath" class="nav-link">@item.Title</a>
                </li>
            }
        }
        @if (!hasAboutLink)
        {
            <li>
                <a asp-controller="About" asp-action="Index" class="nav-link">Giới thiệu</a>
            </li>
        }
        @if (!hasLocatorLink)
        {
            <li>
                <a asp-controller="Home" asp-action="StoreLocator" class="nav-link">Tìm nhà hàng</a>
            </li>
        }
        @* @if (!hasContactLink)
        {
            <li>
                <a asp-controller="Contact" asp-action="Index" class="nav-link">Liên hệ</a>
            </li>
        } *@
    </ul>
</nav>