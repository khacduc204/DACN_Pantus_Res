<!-- Chi tiết món ăn -->
<div class="product-detail-section">
    <div class="container">
        <div class="product-detail-content">
            <div class="product-image-gallery">
                <!-- Hình ảnh chính của món ăn -->
                <div class="main-image">
                    <img src="@Model.Image" alt="Hình Ảnh Món Ăn">
                </div>
                <!-- Thumbnail ảnh món ăn liên quan -->
                <h4>Các món ăn khác của nhà hàng:</h4>
                <div class="image-thumbnails">
                    @if (MenuRelated != null)
                    {
                        foreach (var p in MenuRelated)
                        {
                            <img src="@p.Image" alt="Hình Ảnh Món Ăn">
                        }
                    }
                </div>
            </div>
            <div class="product-info">
                <!-- Tên món ăn -->
                <h2 class="product-title">@Model.Title</h2>

                <!-- Giá món ăn -->
                <div class="price-section">
                    @if (Model.PriceSale.HasValue && Model.PriceSale.Value > 0 && Model.PriceSale.Value < Model.Price)
                    {
                        <span class="new-price">@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", Model.PriceSale)</span>
                        <span class="old-price">@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", Model.Price)</span>
                    }
                    else
                    {
                        <span class="new-price">@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", Model.Price)</span>
                    }
                </div>

                <!-- Đánh giá món ăn -->
                <div class="rating-review">
                    <div class="rating">
                        @for (var i = 0; i < Model.Star; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    <span>(@(MenuReview?.Count() ?? 0) đánh giá của khách hàng)</span>
                </div>

                <!-- Mô tả món ăn -->
                <div class="description">
                    <p>@Model.Description</p>
                </div>

                <!-- Chọn số lượng và nút mua hàng -->
                <div class="quantity-cart">
                    <label for="quantity">Số lượng:</label>
                    <input type="number" id="quantity" value="1" min="1" max="@Model.Quantity">
                    <button type="button" class="add-to-cart" data-id="@Model.IdMenuItem">Thêm vào giỏ hàng</button>
                </div>

                <!-- Danh mục món ăn -->
                <div class="product-category">
                    <span>Danh Mục: </span>
                    <a href="/Home/Menu">@Model.Category?.Title</a>
                </div>

                <!-- Thẻ sản phẩm -->
                <div class="product-tags">
                    <span>Thẻ: </span>
                    <a href="#">Đồ Ăn</a>, <a href="#">Ẩm Thực</a>, <a href="#">Món chính</a>
                </div>

                <!-- Chia sẻ trên mạng xã hội -->
                <div class="social-share">
                    <span>Chia sẻ: </span>
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest-p"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-detail">
    <div class="container">
        @Html.Raw(Model.Detail)
    </div>
</div>

<!-- Đánh giá khách hàng -->
<div class="reviews-section">
    <h2 class="reviews-title">Khách Hàng Đánh Giá</h2>
    <div class="reviews-container">
        @if (MenuReview != null)
        {
            foreach (var p in MenuReview)
            {
                <div class="review-card">
                    <div class="reviewer-info">
                        <img src="@p.Image" alt="Reviewer Avatar" class="reviewer-avatar">
                        <h4 class="reviewer-name">@p.Name</h4>
                        <span class="review-date">
                            @(p.CreatedDate.HasValue ? p.CreatedDate.Value.ToString("dd/MM/yyyy") : "")
                        </span>
                    </div>
                    <div class="review-rating">
                        @for (var i = 0; i < p.Rating; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    <p class="review-text">@p.Detail</p>
                </div>
            }
        }
    </div>

    <!-- Khu vực thêm review -->
    <div class="write-review-section">
        <h2 class="write-review-title">Viết Đánh Giá</h2>
        <form id="reviewForm" action="#" method="post" class="review-form">
            <input type="hidden" id="c_menuid" name="menuid" value="@Model.IdMenuItem" />
            <div class="form-group">
                <input id="c_name" type="text" name="name" placeholder="Tên của bạn" required class="form-input">
            </div>
            <div class="form-group">
                <input id="c_phone" type="text" name="phone" placeholder="Số điện thoại của bạn" required class="form-input">
            </div>
            <div class="form-group">
                <input id="c_rating" type="number" name="rating" placeholder="Đánh Giá ⭐ của bạn (1-5)" required min="1" max="5" class="form-input">
            </div>
            <div class="form-group">
                <textarea id="c_message" name="message" placeholder="Viết đánh giá của bạn ở đây..." required class="form-textarea"></textarea>
            </div>
            <button id="c_submit" type="button" class="submit-review-btn">
                Gửi Đánh Giá
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
   
    <script>
        $(document).ready(function () {
            // Thêm vào giỏ hàng
            $(".add-to-cart").click(function () {
                var id = $(this).data("id");
                var quantity = $("#quantity").val();
                $.post("/Cart/AddToCart", { id: id, quantity: quantity }, function (res) {
                    if (res.success) {
                        toastr.success(res.message);
                    } else {
                        toastr.error(res.message);
                    }
                });
            });

            // Gửi đánh giá
            $("#c_submit").click(function (e) {
                e.preventDefault();
                let _name = $("#c_name").val();
                let _phone = $("#c_phone").val();
                let _rating = $("#c_rating").val();
                let _message = $("#c_message").val();
                let _menuid = $("#c_menuid").val();

                $.ajax({
                    url: "/Menu/CreateReview",
                    type: "POST",
                    data: {
                        menuid: _menuid,
                        name: _name,
                        phone: _phone,
                        rating: _rating,
                        message: _message
                    },
                    success: function (result) {
                        if (result.status) {
                            $("#c_name").val("");
                            $("#c_phone").val("");
                            $("#c_rating").val("");
                            $("#c_message").val("");
                            toastr.success('Gửi thành công!');
                        } else {
                            toastr.error('Gửi không thành công!');
                        }
                    },
                    error: function () {
                        toastr.error('Có lỗi xảy ra, vui lòng thử lại!');
                    }
                });
            });

            // Đổi ảnh chính khi click thumbnail
            $('.image-thumbnails img').click(function () {
                var newSrc = $(this).attr('src');
                $('.main-image img').attr('src', newSrc);
            });
        });
    </script>
}