@model KD_Restaurant.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<section class="auth-wrapper">
    <div class="auth-card shadow-lg">
        <div class="auth-visual">
            <div class="brand-pill">KD Restaurant</div>
            <h2>Trải nghiệm ẩm thực tinh tế</h2>
            <p>Đặt bàn, quản lý đơn hàng và nhận ưu đãi thành viên chỉ với vài thao tác.</p>
            <ul>
                <li>Ưu đãi độc quyền cho khách hàng thân thiết</li>
                <li>Theo dõi lịch đặt bàn theo thời gian thực</li>
                <li>Truy cập bảng điều khiển quản trị cho quản lý</li>
            </ul>
        </div>
        <div class="auth-form">
            <div class="auth-form-header">
                <h3>Đăng nhập</h3>
                <p>Chào mừng trở lại với KD Restaurant</p>
            </div>

            @if (TempData.ContainsKey("RegisterSuccess"))
            {
                <div class="alert alert-success" role="alert">
                    @TempData["RegisterSuccess"]
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="ReturnUrl" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-4">
                    <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập" autocomplete="username" />
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" autocomplete="current-password" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <span class="text-muted small">Quên mật khẩu? Liên hệ quản trị viên</span>
                </div>

                <button type="submit" class="btn btn-auth w-100">Đăng nhập</button>

                <p class="text-center mt-4 mb-0">
                    Chưa có tài khoản?
                    <a asp-action="Register" asp-controller="Account" class="link-highlight">Đăng ký ngay</a>
                </p>
            </form>
        </div>
    </div>
</section>

<style>
    .auth-wrapper {
        min-height: 100vh;
        background: radial-gradient(circle at top, rgba(255, 189, 132, 0.25), transparent 55%), linear-gradient(120deg, #0f2027, #203a43, #2c5364);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .auth-card {
        width: min(1100px, 100%);
        background: rgba(255, 255, 255, 0.04);
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.08);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    }

    .auth-visual {
        background: linear-gradient(135deg, rgba(15, 32, 39, 0.6), rgba(44, 83, 100, 0.7)), url('/assets/img/slider/slider1.jpg') center/cover;
        color: #fff;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1.5rem;
    }

    .auth-visual h2 {
        font-size: 2.25rem;
        font-weight: 600;
        line-height: 1.2;
        margin: 0;
    }

    .auth-visual ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        font-size: 0.95rem;
    }

    .auth-visual li::before {
        content: '\2713';
        margin-right: 0.5rem;
        color: #f7c08a;
    }

    .brand-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.9rem;
        background: rgba(255, 255, 255, 0.18);
        border-radius: 999px;
        font-size: 0.85rem;
        letter-spacing: 0.06em;
        text-transform: uppercase;
    }

    .auth-form {
        background: #fff;
        padding: 3rem;
    }

    .auth-form-header h3 {
        font-weight: 600;
        margin-bottom: 0.35rem;
    }

    .auth-form-header p {
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .btn-auth {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        border: none;
        color: #fff;
        font-weight: 600;
        padding: 0.9rem 1.2rem;
        border-radius: 999px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-auth:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(255, 126, 95, 0.35);
    }

    .link-highlight {
        color: #ff7e5f;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .auth-form, .auth-visual {
            padding: 2rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
