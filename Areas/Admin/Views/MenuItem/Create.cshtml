@model KD_Restaurant.Models.tblMenuItem
@{
    ViewData["Title"] = "Thêm món ăn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Thêm món ăn</h3>
<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-area="Admin" asp-controller="MenuItem" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Tên món</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Alias</label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Giá</label>
                <input asp-for="Price" class="form-control" type="number" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Giá khuyến mãi</label>
                <input asp-for="PriceSale" class="form-control" type="number" min="0" />
                <span asp-validation-for="PriceSale" class="text-danger"></span>
            </div>
            <div class="mb-3">
        <label class="form-label">Ảnh</label>
        <input name="imageFile" class="form-control" type="file" accept="image/*" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
            <div class="mb-3">
                <label class="form-label">Loại món</label>
                <select asp-for="IdCategory" class="form-select">
                    <option value="">-- Chọn loại món --</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in (IEnumerable<KD_Restaurant.Models.tblMenuCategory>)ViewBag.Categories)
                        {
                            <option value="@cat.IdCategory">@cat.Title</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdCategory" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Số lượng</label>
                <input asp-for="Quantity" class="form-control" type="number" min="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Sao (đánh giá)</label>
                <input asp-for="Star" class="form-control" type="number" min="0" max="5" />
                <span asp-validation-for="Star" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Chi tiết</label>
                <textarea asp-for="Detail" class="form-control"></textarea>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="IsActive">Hiển thị</label>
            </div>
            <button type="submit" class="btn btn-success">Lưu</button>
            <a asp-area="Admin" asp-controller="MenuItem" asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}