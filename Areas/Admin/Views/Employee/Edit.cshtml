@model KD_Restaurant.ViewModels.EmployeeFormModel
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    ViewBag.IsEdit = true;
}

<section class="section dashboard">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Cập nhật nhân viên</h1>
      <p class="text-muted mb-0">Điều chỉnh thông tin cá nhân, quyền hạn và trạng thái.</p>
    </div>
    <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form asp-area="Admin" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <partial name="_EmployeeForm" model="Model" />

        <div class="d-flex justify-content-end gap-3 mt-4">
          <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-light border">Huỷ</a>
          <button type="submit" class="btn btn-primary"><i class="bi bi-save me-1"></i>Lưu thay đổi</button>
        </div>
      </form>
    </div>
  </div>
</section>
