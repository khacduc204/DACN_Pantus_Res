@model KD_Restaurant.ViewModels.EmployeeFormModel
@{
    ViewData["Title"] = "Thêm nhân viên";
    ViewBag.IsEdit = false;
}

<section class="section dashboard">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Thêm nhân viên mới</h1>
      <p class="text-muted mb-0">Tạo tài khoản nội bộ và gán quyền truy cập phù hợp.</p>
    </div>
    <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form asp-area="Admin" asp-controller="Employee" asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <partial name="_EmployeeForm" model="Model" />

        <div class="d-flex justify-content-end gap-3 mt-4">
          <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-light border">Huỷ</a>
          <button type="submit" class="btn btn-primary"><i class="bi bi-save me-1"></i>Lưu nhân viên</button>
        </div>
      </form>
    </div>
  </div>
</section>
