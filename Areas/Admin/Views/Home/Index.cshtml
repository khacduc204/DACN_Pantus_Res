@model KD_Restaurant.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var activeRangeValue = Model.Filters.FirstOrDefault(f => f.IsActive)?.RouteValue ?? "homnay";
    var startIndex = Model.PagedItemStats.Any() ? ((Model.Page - 1) * Model.PageSize) + 1 : 0;
    var endIndex = Model.PagedItemStats.Any() ? startIndex + Model.PagedItemStats.Count - 1 : 0;
}

<div class="pagetitle">
    <h1>Báo cáo tổng quan</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Thống kê</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-3">
        <div>
            <h4 class="mb-1">Khoảng thời gian</h4>
            <p class="text-muted mb-0">@Model.RangeLabel</p>
        </div>
        <div class="dashboard-filters">
            @foreach (var filter in Model.Filters)
            {
                <a class="btn btn-filter @(filter.IsActive ? "active" : null)"
                   asp-area="Admin"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-range="@filter.RouteValue">
                    @filter.Label
                </a>
            }
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card metric-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng số đơn</p>
                        <h2 class="fw-bold mb-0">@Model.TotalOrders</h2>
                    </div>
                    <div class="metric-icon bg-primary text-white">
                        <i class="bi bi-receipt"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card metric-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng doanh thu</p>
                        <h2 class="fw-bold mb-0">@Model.CurrencyFormat(Model.TotalRevenue)</h2>
                    </div>
                    <div class="metric-icon bg-success text-white">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card metric-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng lợi nhuận</p>
                        <h2 class="fw-bold mb-0">@Model.CurrencyFormat(Model.TotalProfit)</h2>
                    </div>
                    <div class="metric-icon bg-info text-white">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card metric-card p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Tổng khách hàng</p>
                        <h2 class="fw-bold mb-0">@Model.TotalCustomers</h2>
                    </div>
                    <div class="metric-icon bg-warning text-white">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="chart-card mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h5 class="mb-1">Doanh thu &amp; Lợi nhuận</h5>
                <p class="text-muted mb-0">Biểu đồ theo @Model.RangeLabel.ToLower()</p>
            </div>
        </div>
        <canvas id="revenueChart" height="120"></canvas>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card items-table-card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3 gap-3 flex-wrap">
                    <div>
                        <h5 class="mb-1">Số lượng bán theo món</h5>
                        <p class="text-muted mb-0">Danh sách các món trong @Model.RangeLabel.ToLower()</p>
                    </div>
                    <form method="get" asp-area="Admin" asp-controller="Home" asp-action="Index" class="items-filter-form d-flex gap-2 flex-wrap align-items-end">
                        <input type="hidden" name="range" value="@activeRangeValue" />
                        <input type="hidden" name="page" value="1" />
                        <div>
                            <label class="form-label text-muted mb-1">Hiển thị</label>
                            <select class="form-select" name="pageSize" onchange="this.form.submit()">
                                @foreach (var option in Model.PageSizeOptions)
                                {
                                    <option value="@option" selected="@(option == Model.PageSize ? "selected" : null)">@option dòng</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label class="form-label text-muted mb-1">Tìm kiếm</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" name="search" value="@Model.SearchTerm" placeholder="Nhập tên món hoặc danh mục" />
                                <button class="btn btn-primary" type="submit">Lọc</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle" id="itemsTable">
                        <thead>
                            <tr class="text-muted">
                                <th>#</th>
                                <th>Mặt hàng</th>
                                <th>Danh mục</th>
                                <th class="text-end">Giá trị</th>
                                <th class="text-end">Số lượng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PagedItemStats.Any())
                            {
                                var index = startIndex;
                                foreach (var item in Model.PagedItemStats)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="@(string.IsNullOrWhiteSpace(item.Image) ? "/admin/assets/img/default-food.png" : item.Image)" class="item-thumb" alt="@item.ItemName" />
                                                <div>
                                                    <div class="fw-semibold">@item.ItemName</div>
                                                    <div class="text-muted small">@Model.CurrencyFormat(item.Revenue)</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@(string.IsNullOrWhiteSpace(item.Category) ? "Không phân loại" : item.Category)</td>
                                        <td class="text-end">@Model.CurrencyFormat(item.Revenue)</td>
                                        <td class="text-end fw-semibold">@item.Quantity</td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">Chưa có dữ liệu trong phạm vi này.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mt-3">
                    <div class="text-muted small">
                        @if (Model.PagedItemStats.Any())
                        {
                            <span>Hiển thị @startIndex - @endIndex trong tổng @Model.FilteredItemCount món.</span>
                        }
                        else
                        {
                            <span>Không có dữ liệu phù hợp.</span>
                        }
                    </div>
                    <div class="pagination-rounded">
                        <a class="btn btn-outline-secondary @(Model.Page == 1 ? "disabled" : null)"
                           asp-area="Admin"
                           asp-controller="Home"
                           asp-action="Index"
                           asp-route-range="@activeRangeValue"
                           asp-route-page="@(Model.Page - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-search="@Model.SearchTerm">Trước</a>
                        <span class="mx-2 fw-semibold">Trang @Model.Page/@Model.TotalPages</span>
                        <a class="btn btn-outline-secondary @(Model.Page == Model.TotalPages ? "disabled" : null)"
                           asp-area="Admin"
                           asp-controller="Home"
                           asp-action="Index"
                           asp-route-range="@activeRangeValue"
                           asp-route-page="@(Model.Page + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-search="@Model.SearchTerm">Tiếp</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card top-items-card p-4">
                <h5 class="mb-1">Top 5 món bán chạy</h5>
                <p class="text-muted mb-3">Theo số lượng bán</p>
                <canvas id="topItemsChart" height="240"></canvas>
                <ul class="list-unstyled mt-4">
                    @if (Model.TopItems.Any())
                    {
                        foreach (var item in Model.TopItems)
                        {
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>@item.ItemName</span>
                                <span class="fw-semibold">@item.Quantity</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="text-muted">Chưa có dữ liệu.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>

@section Styles {
    @await Html.PartialAsync("_DashboardStyles")
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartPoints));
        const topItemData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TopItems));

        const ctx = document.getElementById('revenueChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.map(x => x.Label),
                datasets: [
                    {
                        label: 'Doanh thu',
                        data: chartData.map(x => x.Revenue),
                        borderColor: '#2563eb',
                        backgroundColor: 'rgba(37, 99, 235, 0.15)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 3
                    },
                    {
                        label: 'Lợi nhuận',
                        data: chartData.map(x => x.Profit),
                        borderColor: '#22c55e',
                        backgroundColor: 'rgba(34, 197, 94, 0.15)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 3
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function (value) {
                                return value.toLocaleString('vi-VN') + ' ₫';
                            }
                        }
                    }
                }
            }
        });

        const donutCtx = document.getElementById('topItemsChart');
        new Chart(donutCtx, {
            type: 'doughnut',
            data: {
                labels: topItemData.map(x => x.ItemName),
                datasets: [{
                    data: topItemData.map(x => x.Quantity),
                    backgroundColor: ['#2563eb', '#f97316', '#22c55e', '#a855f7', '#f43f5e']
                }]
            },
            options: {
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

    </script>
}
