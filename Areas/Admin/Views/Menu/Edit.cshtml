@model KD_Restaurant.Models.tblMenu
@{
    ViewData["Title"] = "Sửa menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Sửa menu</h3>
<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-area="Admin" asp-controller="Menu" asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdMenu" />
            <div class="mb-3">
                <label class="form-label">Tên menu</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Alias</label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Đường dẫn (UrlPath)</label>
                <input asp-for="UrlPath" class="form-control" />
                <span asp-validation-for="UrlPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Cấp (Levels)</label>
                <input asp-for="Levels" class="form-control" type="number" min="1" />
                <span asp-validation-for="Levels" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Menu cha</label>
                <select asp-for="ParentId" class="form-select">
                    <option value="">-- Không có --</option>
                    @if (ViewBag.MenuParents != null)
                    {
                        foreach (var parent in (IEnumerable<KD_Restaurant.Models.tblMenu>)ViewBag.MenuParents)
                        {
                            @if (parent.IdMenu == Model.ParentId)
                            {
                                <option value="@parent.IdMenu" selected="selected">@parent.Title</option>
                            }
                            else
                            {
                                <option value="@parent.IdMenu">@parent.Title</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Thứ tự (Position)</label>
                <input asp-for="Position" class="form-control" type="number" min="1" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="IsActive">Hiển thị</label>
            </div>
            <button type="submit" class="btn btn-success">Lưu</button>
            <a asp-area="Admin" asp-controller="Menu" asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}